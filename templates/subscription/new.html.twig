{% extends 'base_form.html.twig' %}

{% block title %}Create Subscription{% endblock %}

{% block body %}
<section class="flex items-center justify-center min-h-screen pt-32 pb-8 bg-skyTheme-skyBlue">
    <div class="w-3/4 p-6 shadow-lg bg-white rounded-md overflow-hidden">
        <h1 class="text-3xl font-bold text-oceanTheme-deepBlue mb-4">Assurance Subscription (5â‚¬/day)</h1>
        {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
            <div>
                {{ form_label(form.startDate, 'Start Date', {'label_attr': {'class': 'block text-lg font-semibold'}}) }}
                {{ form_widget(form.startDate, {'attr': {'class': 'form-control mt-2 w-full input-field'}}) }}
