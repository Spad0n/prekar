                {{ form_widget(form.endDate, {'attr': {'class': 'form-control mt-2 w-full input-field'}}) }}
                <div class="text-red-500">{{ form_errors(form.endDate) }}</div>
            </div>
            <button type="submit" class="blue-button mt-4">Create</button>
        {{ form_end(form) }}
    </div>
</section>
{% endblock %}