{% extends 'base.html.twig' %}

{% block body %}
  <section class="flex items-center justify-center h-screen bg-skyTheme-skyBlue">
    <form method="post" class="w-96 p-6 shadow-lg bg-white rounded-md">
      <h1 class="text-3xl block text-center font-semibold">Login</h1>
      {% if error %}
        <div class="alert alert-danger mt-3">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
      {% endif %}

      {% if app.user %}
        <div class="mt-3">
          You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
      {% endif %}

      <hr class="mt-3">
      <div class="mt-3">
        <label for="inputEmail" class="block text-base mb-2">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control border w-full text-base px-3 py-2 rounded-md" autocomplete="email" required autofocus>
      </div>
      <div class="mt-3">
        <label for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control border w-full text-base px-3 py-2 rounded-md" autocomplete="current-password" required>
        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >
      </div>
      <div class="mt-3">
        <input type="checkbox" name="_remember_me">
        <label>Remember me</label>
      </div>
      <button class="blue-button mt-3" type="submit">
        Sign in
      </button>
    </form>
  </section>
{% endblock %}
