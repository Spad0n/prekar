{% extends 'base.html.twig' %}

{% block title %}Hello PrekarHomePageController!{% endblock %}

{% block body %}
  <nav class="bg-black text-white py-3">
    <div class="container mx-auto flex items-center justify-between ">
      <!-- Left Side: Logo and Links -->
      <div class="flex items-center space-x-1">
        <!-- Logo -->
        <span class="text-2xl pr-6">Prekar</span>

        <!-- Navigation Links -->
        <a href="#" class="rounded-full px-3 py-2 transition-background duration-200 ease-[cubic-bezier(0,0,1,1)] hover:bg-custom-black">Ride</a>
        <a href="#" class="rounded-full px-3 py-2 transition-background duration-200 ease-[cubic-bezier(0,0,1,1)] hover:bg-custom-black">Drive</a>
        <a href="#" class="rounded-full px-3 py-2 transition-background duration-200 ease-[cubic-bezier(0,0,1,1)] hover:bg-custom-black">Business</a>
        <div class="relative group">
          <button id="about-toggle" class="flex items-center rounded-full px-3 py-2 transition-background duration-200 ease-[cubic-bezier(0,0,1,1)] hover:bg-custom-black">
            About
            <div class="ml-2">
              <svg id="about-arrow" width="18" height="18" viewBox="0 0 24 24" fill="white">
                <path d="M18 8v3.8l-6 4.6-6-4.6V8l6 4.6L18 8Z" fill="currentColor"></path>
              </svg>
            </div>
          </button>
          <!-- Dropdown -->
          <div class="absolute mt-2">
            <ul id="about-dropdown" class="absolute left-0 mt-2 hidden w-48 bg-white text-black rounded shadow-lg py-2">
              <li><a href="#" class="block px-4 py-2 hover:bg-custom-white">About us</a></li>
              <li><a href="#" class="block px-4 py-2 hover:bg-custom-white">Our offerings</a></li>
              <li><a href="#" class="block px-4 py-2 hover:bg-custom-white">How Uber works</a></li>
              <li><a href="#" class="block px-4 py-2 hover:bg-custom-white">Impact</a></li>
              <li><a href="#" class="block px-4 py-2 hover:bg-custom-white">Sustainability</a></li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Right Side: Buttons and Dropdown -->
      <div class="flex items-center space-x-1">
        <!-- Language Selector -->
        <div class="flex items-center space-x-1 rounded-full px-3 py-2 transition-background duration-200 ease-[cubic-bezier(0,0,1,1)] hover:bg-custom-black">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
            <path d="M12 1C5.9 1 1 5.9 1 12s4.9 11 11 11 11-4.9 11-11S18.1 1 12 1Zm8 11c0 .7-.1 1.4-.3 2-.6-1.5-1.6-3.1-3-4.7l1.8-1.8c1 1.3 1.5 2.8 1.5 4.5ZM6.5 6.5c1.3 0 3.6.8 6 2.9l-3.2 3.2C7.1 9.8 6.5 7.5 6.5 6.5Zm8.1 5c2.3 2.7 2.9 5 2.9 6-1.3 0-3.6-.8-6-2.9l3.1-3.1Zm1.9-6.1-1.9 1.9c-1.6-1.4-3.2-2.4-4.7-3 .7-.2 1.3-.3 2-.3 1.8 0 3.3.5 4.6 1.4ZM4 12c0-.7.1-1.4.3-2 .6 1.5 1.6 3.1 3 4.7l-1.8 1.8C4.5 15.2 4 13.7 4 12Zm3.5 6.6 1.9-1.9c1.6 1.4 3.2 2.4 4.7 3-.7.2-1.3.3-2 .3-1.8 0-3.3-.5-4.6-1.4Z" fill="currentColor"></path>
          </svg>
          <span>EN</span>
        </div>

        <button class="rounded-full px-3 py-2 transition-background duration-200 ease-[cubic-bezier(0,0,1,1)] hover:bg-custom-black">Help</button>
        <a href="#" class="rounded-full px-3 py-2 transition-background duration-200 ease-[cubic-bezier(0,0,1,1)] hover:bg-custom-black">Log in</a>
        <a href="#" class="bg-white text-black rounded-full px-3 py-2 transition-background duration-200 ease-[cubic-bezier(0,0,1,1)] hover:bg-custom-white">Sign up</a>
      </div>
    </div>
  </nav>
{% block javascripts %}
  {{ vite_entry_script_tags('home_navbar') }}
{% endblock %}
{% endblock %}
