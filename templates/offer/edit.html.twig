{% extends 'base_form.html.twig' %}

{% block title %}Edit Offer{% endblock %}

{% block body %}
  <section class="flex items-center justify-center min-h-screen pt-32 pb-8">
    <div class="w-3/4 p-6 shadow-lg bg-white rounded-md">
      {% for label, messages in app.flashes %}
        <div class="p-4 mb-6 rounded-md {% if label == 'success' %}bg-green-100 text-green-700{% elseif label == 'error' %}bg-red-100 text-red-700{% else %}bg-skyTheme-lightCyan text-oceanTheme-deepBlue{% endif %}">
          {% for message in messages %}
            <p class="font-medium">{{ message }}</p>
          {% endfor %}
        </div>
      {% endfor %}

      <h1 class="text-4xl font-bold text-oceanTheme-deepBlue mb-6">Edit Offer</h1>

      {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
        <div class="bg-skyTheme-lightCyan p-4 rounded-md mb-6">
          <h3 class="text-2xl font-semibold text-oceanTheme-navyBlue mb-4">Car Details</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>{{ form_row(form.car.brand, {'attr': {'class': 'input-field w-full'}}) }}</div>
            <div>{{ form_row(form.car.model, {'attr': {'class': 'input-field w-full'}}) }}</div>
            <div>{{ form_row(form.car.registration, {'attr': {'class': 'input-field w-full'}}) }}</div>
            <div>{{ form_row(form.car.fuelType, {'attr': {'class': 'input-field w-full'}}) }}</div>
            <div>{{ form_row(form.car.nbSeat, {'attr': {'class': 'input-field w-full'}}) }}</div>
            <div>{{ form_row(form.car.bootCapacity, {'attr': {'class': 'input-field w-full'}}) }}</div>
          </div>
        </div>

        <div class="bg-skyTheme-lightCyan p-4 rounded-md mb-6">
          <h3 class="text-2xl font-semibold text-oceanTheme-navyBlue mb-4">Offer Details</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>{{ form_row(form.startDate, {'attr': {'class': 'input-field w-full'}}) }}</div>
            <div>{{ form_row(form.endDate, {'attr': {'class': 'input-field w-full'}}) }}</div>
            <div class="md:col-span-2">{{ form_row(form.localisationGarage, {'attr': {'class': 'input-field w-full'}}) }}</div>
            <div>{{ form_row(form.price, {'attr': {'class': 'input-field w-full'}}) }}</div>
            <div class="flex items-center space-x-4">
              <div class="flex items-center">{{ form_widget(form.delivery) }} {{ form_label(form.delivery) }}</div>
              <div class="flex items-center">{{ form_widget(form.available) }} {{ form_label(form.available) }}</div>
            </div>
          </div>
        </div>

        <div class="flex justify-between items-center mt-8">
          <div class="flex space-x-4">
            <a href="{{ path('offer_list') }}" class="transparent-button bg-skyTheme-lightCyan rounded-full">Cancel</a>
            <form method="post" action="{{ path('offer_delete', {'id': offer.id}) }}" onsubmit="return confirm('Are you sure you want to delete this offer?');" class="inline">
              <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ offer.id) }}">
              <button type="submit" class="px-3 py-2 font-semibold text-white rounded-full bg-red-500 transition duration-200 ease-[cubic-bezier(0,0,1,1)] hover:bg-red-600">Delete Offer</button>
            </form>
          </div>
          <button type="submit" class="blue-button">Save Changes</button>
        </div>
      {{ form_end(form) }}
    </div>
  </section>
{% endblock %}
