

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Create Dispute</h1>
    <p>Fill in the form below to create a dispute.</p>
    <form method="post">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <input type="submit" value="Create Dispute" class="btn btn-primary" />
        {{ form_end(form) }}
    </form>
{% endblock %}
